---
import BaseLayout from '../layouts/BaseLayout.astro';
import ThemeToggle from '../components/ThemeToggle.astro';
---

<BaseLayout title="Page Not Found | PixelOven" description="The page you're looking for doesn't exist.">
  <ThemeToggle />

  <div class="max-w-4xl mx-auto px-6 py-20 lg:py-32 text-center">
    <h1 class="text-6xl md:text-8xl font-black uppercase tracking-tighter italic mb-6">404</h1>
    <p class="text-zinc-500 dark:text-zinc-400 text-lg mb-8">The page you're looking for doesn't exist.</p>
    <a href="/" class="inline-block text-sm font-bold uppercase tracking-widest text-oven hover:underline">
      &larr; Back to Home
    </a>
  </div>
</BaseLayout>
