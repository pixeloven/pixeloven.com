<div class="fixed top-6 right-6 z-50">
  <button
    id="theme-toggle"
    type="button"
    class="px-3 py-2 border-2 border-zinc-200 dark:border-zinc-800 hover:border-oven transition-colors rounded-lg text-[10px] font-black uppercase tracking-widest bg-white/80 dark:bg-zinc-950/80 backdrop-blur-md"
    aria-label="Toggle theme"
  >
    <span class="dark:hidden text-zinc-600">&#127769; Dark</span>
    <span class="hidden dark:inline text-zinc-400">&#9728;&#65039; Light</span>
  </button>
</div>

<script>
  function initThemeToggle() {
    const btn = document.getElementById('theme-toggle');
    if (!btn) return;

    btn.addEventListener('click', () => {
      const isDark = document.documentElement.classList.toggle('dark');
      sessionStorage.setItem('theme', isDark ? 'dark' : 'light');
    });
  }

  initThemeToggle();
  document.addEventListener('astro:page-load', initThemeToggle);
</script>
